TITLE "Soft Reset";
%
This module resets under these
circunstances:
1 - counter_dig == 4
2 - change of mode
3 - reset button is clicked
4 - if in mode == 1, the counter_5s
	overflows
%

SUBDESIGN reset (
	cout_mod4, mode, hrst, key_dig,
		inc, dec, cout5 : INPUT;
	srst, udrst, nrst_mode, rst5 : OUTPUT;
)

BEGIN
	srst = LCELL(cout_mod4 # mode # hrst);
	udrst = LCELL(key_dig) # LCELL(srst);
	nrst_mode = !(cout_mod4 # hrst # cout5);
	rst5 = inc # dec # key_dig # cout5;
END;